@model CompetencySurveyProject.Models.ResetPasswordModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ForgotPassword</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("ForgotPassword", "ResetPassword", FormMethod.Post))
        {
        <table>
            <tr>
                <td>
                    @Html.LabelFor(model => model.UserId)
                </td>
                <td>
                    @Html.EditorFor(model => model.UserId)
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" name="name" value="Get OTP" />
                </td>
            </tr>
        </table>
        }
    </div>
</body>
</html>
